{
  "name": "badge-next",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install && husky set .husky/pre-commit \"npx lint-staged\"",
    "nlint": "next lint",
    "format": "prettier --write .",
    "lint": "eslint --color --fix . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "friendly-numbers": "^1.0.1",
    "marked": "^4.0.12",
    "next": "12.0.7",
    "raw-loader": "^4.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/marked": "^4.0.3",
    "@types/node": "17.0.5",
    "@types/qs": "^6.9.7",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.1.5",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.4.1",
    "sass": "^1.49.9",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --color --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}

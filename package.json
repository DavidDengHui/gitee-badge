{
  "name": "badge-next",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install && npx husky set .husky/pre-commit \"npx lint-staged\"",
    "format": "prettier --write .",
    "lint": "eslint --color --fix ./**/*.{ts,tsx}"
  },
  "dependencies": {
    "marked": "^4.0.7",
    "next": "12.0.7",
    "raw-loader": "^4.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/marked": "^4.0.1",
    "@types/node": "17.0.0",
    "@types/react": "17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "8.4.1",
    "eslint-config-next": "12.0.7",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "sass": "^1.45.0",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --color --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
